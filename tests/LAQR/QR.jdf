DORMQR(k,n)  (high_priority)

  // Execution space
  k = 0..MINMTNT-2
  n = k+1..MINMTNT-1

  // Parallel partitioning
  : (k / rtileSIZE) % GRIDrows == rowRANK
  : (n / ctileSIZE) % GRIDcols == colRANK

  IN T     <- T DGEQRT(k)                               [LITTLE_T]
  IN V1    <- Akk DGEQRT_HACK(k)                        [LOWER_TILE] 
  INOUT C1 <- (k == 0) ? A(k,n) : C2 DSSMQR(k-1,n,k)
           -> C1 DSSMQR(k,n,k+1)

BODY
#if !defined(DPLASMA_DRY_RUN)
    void* work = dplasma_private_memory_pop(work_pool);
    CORE_dormqr(
        PlasmaLeft, PlasmaTrans,
        k == descA.mt-1 ? descA.m-k*descA.mb : descA.mb,
        n == descA.nt-1 ? descA.n-n*descA.nb : descA.nb,
        descT.mb,
        k == descA.mt-1 ? descA.m-k*descA.nb : descA.nb,
        V1 /*A(k, k)*/, descA.lm  /*descA.nb*/,
        T  /*T(k, k)*/, descT.mb,
        C1 /*A(k, n)*/, descA.lm  /*descA.nb*/,
        work, descT.nb);
    dplasma_private_memory_push(work_pool, work);
#else
    OUTPUT(( "CORE_dormqr"));
#endif  /* DPLASMA_DRY_RUN */ 
END

