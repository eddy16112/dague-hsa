  k = 0 .. MINMTNT-2
  n = k+1 .. MINMTNT - 1
  
  : (k / rtileSIZE) % GRIDrows == rowRANK
  : (n / ctileSIZE) % GRIDcols == colRANK
  
  INOUT A <- C1 DSSMQR(k, n, MINMTNT-1)
          -> A(k, n)
          
