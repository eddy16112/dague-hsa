DSSMQR(k,n,m)

  // Execution space
  k = 0   .. MINMTNT-2
  n = k+1 .. MINMTNT-1
  m = k+1 .. MINMTNT-1

  // Parallel partitioning
  : (m / rtileSIZE) % GRIDrows == rowRANK
  : (n / ctileSIZE) % GRIDcols == colRANK

  IN V2 <- V2 DTSQRT(k,m)
  IN T  <- T DTSQRT(k,m)                                           [LITTLE_T]

  INOUT C2 <- (k == 0) ? A(m,n) : C2 DSSMQR(k-1,n,m)
           -> ((n == k+1) & (m == k+1)) ? Akk DGEQRT(k+1)
           -> ((n == k+1) & (k  < m-1)) ? V2 DTSQRT(k+1,m)
           -> ((k  < n-1) & (m == k+1)) ? C1 DORMQR(k+1,n)
           -> ((k  < n-1) & (k  < m-1)) ? C2 DSSMQR(k+1,n,m)
  INOUT C1 <- (m == k+1) ? C1 DORMQR(k,n) : C1 DSSMQR(k,n,m-1)
           -> (m == MINMTNT-1) ? A DSSMQR_OUT(k,n) : C1 DSSMQR(k,n,m+1)

BODY
#if !defined(DPLASMA_DRY_RUN)
    void* work = dplasma_private_memory_pop(work_pool);
    CORE_dssmqr(
        PlasmaLeft, PlasmaTrans,
        descA.nb,
        m == descA.mt-1 ? descA.m-m*descA.mb : descA.mb,
        n == descA.nt-1 ? descA.n-n*descA.nb : descA.nb,
        descT.mb,
        descA.nb,
        C1 /*A(k, n)*/, descA.lm  /*descA.nb*/,
        C2 /*A(m, n)*/, descA.lm  /*descA.nb*/,
        V2 /*A(m, k)*/, descA.lm  /*descA.nb*/,
        T  /*T(m, k)*/, descT.mb,
        work, descT.mb);
    dplasma_private_memory_push(work_pool, work);
#else
    OUTPUT(( "CORE_dssmqr"));
#endif  /* DPLASMA_DRY_RUN */ 
END

