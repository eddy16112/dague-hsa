extern "C" %{
#include "dplasma.h"

extern double *_A;
extern double *_B;

#define A(n) _A
#define B(n) _B

%}

rowRANK
GRIDrows

GRIDcols = 1
colRANK = 0

INIT(p)

p = 0
: 0 == rowRANK
: 0 == colRANK

INOUT T <- A(0)
        -> I FL(0..2)

BODY
/* no body */
printf("INIT(%d) on %d\n", p, rowRANK);
END

FL(k)

k = 0..2
: 2*k == rowRANK
: 0 == colRANK

IN    I <- T INIT(0)
INOUT A <- A(0)
        -> ( k == 0 ) ? A SL(0)
	-> ( k == 1 ) ? B SL(0)
	-> ( k == 2 ) ? B SL(1)
INOUT B <- B(0)
        -> ( k == 1 ) ? A SL(1)

BODY
/* no body */
printf("FL(%d) on %d\n", k, rowRANK);
END

SL(k)
k = 0..1
: ((2*k) + 1) == rowRANK
: 0 == colRANK

INOUT A <- (k == 0) ? A FL(0)
        <- (k == 1) ? B FL(1)
	-> (k == 0) ? A LL(0)
INOUT B <- (k == 0) ? A FL(1)
        <- (k == 1) ? A FL(2)
	-> (k == 1) ? B LL(0)

BODY
/* no body */
printf("SL(%d) on %d\n", k, rowRANK);
END

LL(k)
k = 0
: 2 == rowRANK
: 0 == colRANK

IN    A <- A SL(0)
INOUT B <- B SL(1)
        -> B(0)

BODY
printf("LL(%d) on %d\n", k, rowRANK);
/* no body */
END
